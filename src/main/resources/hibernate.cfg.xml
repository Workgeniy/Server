<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "./dtd/hibernate-configuration-3.0.dtd"> 
 
<hibernate-configuration>  
    <session-factory>  
            
        <property name="hbm2ddl.auto">update</property>            
        <property name="connection.url">jdbc:postgresql://localhost:5432/dbtop</property>    
        <property name="connection.driver_class">org.postgresql.Driver</property>   
        <property name="connection.username">user_message</property>
        

        <mapping class="DB.Message"/>  
        <mapping class="Classes.MessageHandler"/>
        
    </session-factory>  
</hibernate-configuration> 